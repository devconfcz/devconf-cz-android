<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="TabTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="colorAccent">@color/primary_dark</item>
    </style>

    <style name="Rating" parent="AppTheme">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

</resources>
